<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<properties>
		<manifest-location>META-INF</manifest-location>
		<sonar.exclusions>**/tiff/common/ui/**,**/au/com/bytecode/**,**/boxbe/pub/email/**</sonar.exclusions>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>${airsltd.maven.jar}</version>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<archive>
						<forced>true</forced>
					</archive>
					<instructions>
						<Export-Package>com.airsltd.core.data,
							com.airsltd.core.data.converters,
							com.airsltd.core.data.annotations,
							com.airsltd.core.json
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${airsltd.junit}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>${airsltd.mockito}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>${airsltd.commons.logging}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.jdt</groupId>
			<artifactId>org.eclipse.jdt.annotation</artifactId>
			<version>2.0.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.airsltd.osgi</groupId>
			<artifactId>airscore</artifactId>
			<version>1.0.10-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<parent>
		<groupId>com.airsltd.osgi</groupId>
		<artifactId>modules</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../modules</relativePath>
	</parent>
	<artifactId>data</artifactId>
	<issueManagement>
		<system>trac</system>
		<url>https://www.airsltd.com/trac/OpenSource</url>
	</issueManagement>
	<name>com.airsltd.core.data</name>
	<description>Core Data library for AIRS, Ltd. products.</description>
</project>
